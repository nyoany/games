<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/movingLayout"
    android:layout_height="550dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="1dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="1dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/clouds"
    tools:context="l00lgamescommunity.movingsquares.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow_purple"
            android:soundEffectsEnabled="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp">
        <ImageView
            android:id="@+id/black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow2_purple" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp">
        <ImageView
            android:id="@+id/yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow3_purple" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp">
        <ImageView
            android:id="@+id/green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow4_purple" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp">
        <ImageView
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow5_purple" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="235dp"
        android:layout_marginLeft="235dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow6_purple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="262dp"
        android:layout_marginStart="-8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/spear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/spear"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="@string/score"/>
    <TextView
        android:id="@+id/scoreId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="@string/time"/>
    <TextView
        android:id="@+id/timerId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:layout_marginStart="195dp"
        android:layout_marginLeft="195dp"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="@string/savedCows"/>
    <TextView
        android:id="@+id/savedCows"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:layout_marginStart="195dp"
        android:layout_marginLeft="195dp"
        android:textStyle="bold"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="445dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="20dp"
            android:text="@string/back"
            android:textStyle="bold"
            android:textColor="#458b00"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>
