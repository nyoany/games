<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/movingLayout"
    android:layout_height="550dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="1dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#008040"
    tools:context="l00lgamescommunity.movingsquares.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow"
            android:soundEffectsEnabled="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp">
        <ImageView
            android:id="@+id/black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp">
        <ImageView
            android:id="@+id/yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="135dp">
        <ImageView
            android:id="@+id/green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="180dp">
        <ImageView
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="235dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/my_cow6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="332dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/spear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/block"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="@string/score"/>
    <TextView
        android:id="@+id/scoreId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="75dp"
        android:textStyle="bold"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="@string/time"/>
    <TextView
        android:id="@+id/timerId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="195dp"
        android:textStyle="bold"
        android:textSize="22dp" />
</RelativeLayout>
