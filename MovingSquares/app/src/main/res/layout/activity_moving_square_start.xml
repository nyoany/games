<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MovingSquareStartActivity"
    android:screenOrientation="portrait"
    android:id="@+id/movingSquaresStartAct"
    android:background="#fff8dc">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/welcome"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="26dp"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
        android:orientation="vertical">

    <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="@string/levelSelection"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22dp"
            android:layout_marginBottom="20dp"
        />
    <CheckBox
        android:id="@+id/easyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/easy"
        android:checked="true"
        android:textStyle="bold"
        android:textColor="#ff4040"
        android:textSize="18dp"/>

    <CheckBox
        android:id="@+id/mediumCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medium"
        android:textStyle="bold"
        android:textColor="#7ac5cd"
        android:textSize="18dp"
        />

    <CheckBox
        android:id="@+id/expertCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expert"
        android:textStyle="bold"
        android:textColor="#006400"
        android:textSize="18dp"/>
</LinearLayout>
<LinearLayout
    android:layout_width="190dp"
    android:layout_height="60dp"
    android:orientation="vertical">
    <Button
        android:id="@+id/playButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="50dp"
        android:text="PLAY"
        android:textStyle="bold"
        android:textColor="#458b00"
        android:textSize="22dp" />
</LinearLayout>
</LinearLayout>

</RelativeLayout>
